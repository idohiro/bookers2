<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <h2>User Info</h2>
           <%= image_tag('profile.jpg') %>
          <table class="table">
            <tr>
              <th>name</th>
              <th>ido</th>
            </tr>
            <tr>
              <td><link_to 'Introduction', class:'btn btn-outline-secondary btn-block fas fa-user-cog'></td>
            </tr>
          </table>
          <div class="row">
            <a class="btn btn-outline-secondary btn-block fas fa-user-cog"></a>
          </div>
          <h3>New Book</h3>
          <%= form_with model:@books, local:true do |f| %>

        <h4>タイトル</h4>
        <%= f.text_field :Title %>

        <h4>Option</h4>
        <%= f.text_area :body %>

        <%= f.submit '投稿' %>

        <% end %>

        </div>
        </div>
        </div>
    <div class="col-md-8 offset-md-1">
          <div class="col-md-8 offset-md-1">
          <h2>Book</h2>
            <% @books.each do |book| %>
          <table>
            <tr>
              <th>
                title
              </th>
              <th>options</th>
            </tr>
            <tr>
              <td><%= image_tag('profile.jpg') %></td>
              <td><%= book.created_at %></td>
            </tr>
             <% end %>
          </table>
        </div>
      </div>
</main>