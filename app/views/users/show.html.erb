<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <h2>User Info</h2>
           <%= image_tag('profile.jpg') %>
          <table class="table">
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            <tr>
              <td>Introduction</td>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
          <div class="row">
          <%= link_to 'Introduction',edit_user_path, class:'btn btn-outline-secondary btn-block fas fa-user-cog'%>
          </div>
          <h3>New Book</h3>
          <%= form_with model:@book, local:true do |f| %>

        <h4>タイトル</h4>
        <%= f.text_field :title %>

        <h4>Option</h4>
        <%= f.text_area :body %>
        <div>

        <%= f.submit '投稿' %>
        </div>

        <% end %>


        </div>
    <div class="col-md-8 offset-md-1">
          <div class="col-md-8 offset-md-1">
          <h2>Book</h2>
          <table>
            <tr>
              <th>
                title
              </th>
              <th>options</th>
            </tr>
             <% @books.each do |book| %>
            <tr>
              <td><%= image_tag('profile.jpg') %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
            </tr>
             <% end %>
          </table>
        </div>
        </div>
      </div>
      </div>
</main>