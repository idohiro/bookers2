
        <div class="col-md-3">
          <h2>User Info</h2>
           <%= image_tag('no_image.jpg') %>
          <table class="table">

            <tr>
              <th>name</th>
              <td><%= user.name %></td>
              </tr>
            <tr>
              <th>Introduction</th>
              <td><%= user.introduction %></td>
            </tr>
          </table>
          <div class="row">
            <%= link_to '',edit_user_path(), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>

          </div>

               <h3>New Book</h3>
          <%= form_with model:book, local:true do |f| %>

        <p>title</p>
        <%= f.text_field :title %>

        <p>Option</p>
        <%= f.text_area :body %>
        <div>

        <%= f.submit 'Create book' , class:'btn btn-success'%>
        </div>

        <% end %>

        </div>