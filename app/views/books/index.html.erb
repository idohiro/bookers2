<main>
 <div class="container px-5 px-sm-0">
    <div class="row">
    <%#= render 'users/list', user: @user ,users: @users , book: @book %>
     <div class="col-md-3">
          <h2>User Info</h2>
           <%= image_tag('no_image.jpg') %>
          <table class="table">

            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
              </tr>
            <tr>
              <th>Introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </table>
          <div class="row">
            <%= link_to '',edit_user_path(@user), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>

          </div>

               <h3>New Book</h3>
          <%= form_with model:@book, local:true do |f| %>

        <p>title</p>
        <%= f.text_field :title %>

        <p>Option</p>
        <%= f.text_area :body %>
        <div>

        <%= f.submit 'Create book' , class:'btn btn-success'%>
        </div>

        <% end %>

        </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book</h2>
            <table class="table table-hover table-inverse">
              <thead>
              <tr>
                <th>

                </th>
                <th>
                  title
                </th>
                <th>Option</th>
              </tr>
              </thead>
              <tbody>
                  <% @books.each do |book| %>
              <tr>
                <td><%= image_tag('profile.jpg') %></td>
                <td><%= link_to book.title, book_path(book.id) %></td></td>
                <td><%= book.body %></td>
              </tr>
              </tbody>
                <% end %>
            </table>
      </div>
    </div>
  </div>
</main>