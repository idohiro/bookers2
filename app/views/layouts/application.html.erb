<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <body>
        <header>

          <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

              <div class ="navbar-nav container">
                <a><%= link_to "Bookers", root_path, class: 'navbar-brand text-light' %></a>
                <div class="collapse navbar-collapse">
                  <ul class="navbar-nav ml-auto">
                    <li>
                    <%= link_to "Home", root_path, class: 'fas fa-home nav-link text-light' %>
                    </li>
                     <% if user_signed_in? %>
                     <li>
                       <%= link_to "user" ,users_path,class: 'fas fa-users nav-link text-light' %>
                      </li>
                      <li>
                       <%= link_to "book" ,books_path,class: 'fas fa-book-open nav-link text-light' %>
                      </li>

                       <li>
                       <%= link_to "Logout" ,destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %>
                      </li>
                         <% else %>
                    <li>
                     <%= link_to "About", homes_about_path, class: 'fas fa-users nav-link text-light' %>
                    </li>
                    <li>
                       <%= link_to "Login",  new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
                    </li>
                     <li>
                     <%= link_to "sign_up", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
                    </li>
                  </ul>
                </div>
                <% end %>
              </div>
            </nav>
        </header>
  <main>
      <%= flash[:alert] %>
    <%= flash[:success] %>
  </main>
<%= yield %>
    <footer >
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
